<form id="update-form" method="POST" action="/editBand">

    <label>Band name</label>
    <input name="bandName" type="text">

    <label>Band image</label>
    <input name="img" type="text">

    <label>Describe your band</label>
    <input name="description" type="text">

    <label>Main Band genre</label>
    <input name="mainGenre" type="text">

    <label>Sub Band genres</label>
    <input name="subGenre" type="text">

    <h3>Where is your band located</h3>
    <label>Country</label>
    <input name="country" type="text">

    <label>City</label>
    <input name="city" type="text">

    <h3>Add a band member</h3>


    <a href="/manageBands/{{this._id}}/addMember"><button type="button">Add a band member</button></a>

    <h3>Who is your band looking for?</h3>
    <a href="/manageBands/{{this._id}}/addMissing"><button type="button">Add a missing spot</button></a>

    <button type="submit">Create a band</button>
</form>